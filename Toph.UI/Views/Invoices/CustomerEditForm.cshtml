@model InvoicesInvoiceModel.Customer

@using (Html.BeginForm())
{
    <h3>Customer Information</h3>
    
    <ol>
        <li>@Html.EditorFor(x => x.Name)</li>
        <li>@Html.EditorFor(x => x.Address.Line1)</li>
        <li>@Html.EditorFor(x => x.Address.Line2)</li>
        <li>@Html.EditorFor(x => x.Address.City)</li>
        <li>@Html.EditorFor(x => x.Address.State)</li>
        <li>@Html.EditorFor(x => x.Address.PostalCode)</li>
    </ol>

    <input type="submit" value="Done" />

    @Html.ValidationSummary()
}
